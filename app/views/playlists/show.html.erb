<p id="notice"><%= notice %></p>

<p>
  <div style="text-align: center"><%= @playlist.name %></div>
  <% @playlist.songs.all.each do |song| %>
  <div style="text-align: center">
  	<% if song.title %>
  		<p > Song: <%= song.title %> </p>
  		<iframe width="560" height="315" src= <%= song.url %> frameborder="0" allow="accelerometer; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  	<% end %>
    </div>
  <% end %>
</p>

<%= button_to "Add a song", addSong_path(id: @playlist, songid: 3), :class => "button medium", :method => :patch %>

<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>
